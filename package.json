{
  "name": "fkg-list",
  "version": "1.0.0",
  "private": true,
  "description": "フラワーナイトガールキャラクター一覧",
  "repository": "https://github.com/moonlight8978/fkg-list.git",
  "license": "MIT",
  "author": "_MoonLight_ <moonlight8978@gmail.com>",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install": "lerna bootstrap",
    "postinstall": "yarn build:types",
    "build:types": "lerna run --scope fkg-list-types build && lerna link",
    "prebuild:webapp": "yarn start:crawler",
    "build:webapp": "lerna run --scope fkg-list-webapp build",
    "start:crawler": "lerna run --scope fkg-list-crawler start",
    "prestart:webapp": "yarn start:crawler",
    "start:webapp": "lerna run --scope fkg-list-webapp start",
    "lint:check": "eslint --ext .js,.jsx,.ts,.tsx .",
    "pretty": "prettier --write --loglevel silent '**/*.{json,yml,yaml,js,jsx,ts,tsx}'",
    "deploy:github": "gh-pages --dist packages/fkg-list-webapp/build --branch v2",
    "deploy:local": "npx serve packages/fkg-list-webapp/build",
    "predeploy": "yarn build:webapp",
    "deploy": "yarn deploy:github"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  }
}
